# Configuración de ejemplo para Nginx
# Copia este archivo a /etc/nginx/sites-available/sistema-email
# Reemplaza:
#   - 'tu-dominio.com' con tu dominio real o IP
#   - '5000' con el puerto del FRONTEND que configuraste
#   - '5001' con el puerto del BACKEND que configuraste

# Configuración HTTP
server {
    listen 80;
    server_name tu-dominio.com www.tu-dominio.com;
    
    # Si tienes SSL, descomenta la siguiente línea y comenta el resto
    # return 301 https://$server_name$request_uri;
    
    # Tamaño máximo de archivos
    client_max_body_size 50M;

    # Frontend (Next.js) - CAMBIA EL PUERTO SEGÚN TU CONFIGURACIÓN
    location / {
        proxy_pass http://localhost:5000;  # ← Cambia este puerto
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
    }

    # Backend API - CAMBIA EL PUERTO SEGÚN TU CONFIGURACIÓN
    location /api {
        proxy_pass http://localhost:5001;  # ← Cambia este puerto
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
    }

    # Webhook de Stripe
    location /api/payments/webhook {
        proxy_pass http://localhost:5001;  # ← Cambia este puerto
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Content-Type application/json;
        proxy_read_timeout 300s;
    }
}

# Configuración HTTPS (después de configurar SSL con Certbot)
server {
    listen 443 ssl http2;
    server_name tu-dominio.com www.tu-dominio.com;

    # Certificados SSL (generados con Certbot)
    ssl_certificate /etc/letsencrypt/live/tu-dominio.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/tu-dominio.com/privkey.pem;

    # Configuración SSL moderna
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Tamaño máximo de archivos
    client_max_body_size 50M;

    # Logs
    access_log /var/log/nginx/sistema-email-access.log;
    error_log /var/log/nginx/sistema-email-error.log;

    # Frontend (Next.js) - CAMBIA EL PUERTO SEGÚN TU CONFIGURACIÓN
